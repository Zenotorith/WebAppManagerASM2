<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASM</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="header">
        <div class="navbar">
            <ul class="nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if ((User.IsInRole("Trainee")) || (User.IsInRole("Trainer")))
                {
                    <li>@Html.ActionLink("Course Assigned", "CourseAssigned", "Train")</li>
                    <li>@Html.ActionLink("Course Available", "Course", "Train")</li>
                }
                @if (User.IsInRole("TrainingStaff"))
                {
                    <li>@Html.ActionLink("Course", "Course", "TrainingStaff")</li>
                    <li>@Html.ActionLink("Course Category", "CourseCategory", "TrainingStaff")</li>
                    <li>@Html.ActionLink("Trainee", "Trainee", "TrainingStaff")</li>
                    <li>@Html.ActionLink("Trainer", "Trainer", "TrainingStaff")</li>
                }
                @if (User.IsInRole("Administrator"))
                {
                    <li>@Html.ActionLink("Training Staff", "TrainingStaff", "Admin")</li>
                    <li>@Html.ActionLink("Trainer", "Trainer", "Admin")</li>
                    <li>@Html.ActionLink("Role", "Role", "Admin")</li>
                }
            </ul>
        </div>
        @Html.Partial("_LoginPartial")
    </div>
    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
